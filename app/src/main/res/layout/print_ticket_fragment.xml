<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29568f"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/enterNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_number"
            android:inputType="number"
            android:textColorHint="#FFC9CACA"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#29568f"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/caricon"
            android:gravity="center_horizontal"
            android:textColor="#000" />

        <Button
            android:id="@+id/bBike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bikeicon"
            android:gravity="center_horizontal"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#29568f"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bVan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/vanicon"
            android:gravity="center_horizontal"
            android:textColor="#000" />

        <Button
            android:id="@+id/bTruck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/truckicon"
            android:gravity="center_horizontal"
            android:textColor="#000" />

    </LinearLayout>
</LinearLayout>